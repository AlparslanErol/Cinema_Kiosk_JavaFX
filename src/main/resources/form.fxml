    </ImageView>
    <VBox layoutX="62.0" layoutY="101.0" prefHeight="140.0" prefWidth="224.0">
        <TextField promptText="Name On Credit Card">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField promptText="Credit Card Number">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </TextField>
        <PasswordField prefHeight="39.0" prefWidth="224.0" promptText="CVV">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </PasswordField>
    </VBox>
    <Button fx:id="submitButton" layoutX="99.0" layoutY="244.0" mnemonicParsing="false" onAction="#submitClick"
            styleClass="Submit" text="Buy Ticket"/>
    <ImageView fitHeight="78.0" fitWidth="161.0" layoutX="95.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <Image url="http://www.pngmart.com/files/7/Payment-PNG-Transparent-HD-Photo.png"/>
    </ImageView>
    <VBox layoutX="14.0" layoutY="86.0" prefHeight="146.0" prefWidth="50.0">
        <ImageView fitHeight="50.0" fitWidth="53.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://cdn3.iconfinder.com/data/icons/cash-card-starters-glyph/48/Sed-08-512.png"/>
        </ImageView>
        <ImageView fitHeight="39.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
            <Image url="https://img.icons8.com/all/500/password--v1.png"/>
        </ImageView>
        <ImageView fitHeight="39.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://img.icons8.com/all/500/password--v1.png"/>
        </ImageView>
    </VBox>
</AnchorPane>